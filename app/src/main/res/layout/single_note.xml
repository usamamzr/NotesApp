<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    android:layout_marginHorizontal="2dp"
    android:id="@+id/cardView"
    android:clickable="true"
    android:contextClickable="true"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/tvDesc"
            android:layout_toStartOf="@+id/tvHeading"
            android:src="@drawable/ic_short_text_android" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvHeading"
            android:layout_alignBottom="@+id/tvHeading"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/tvHeading"
            android:text="ID"
            tools:textSize="20sp" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvDesc"
            android:text="Heading"
            tools:textSize="20sp" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvHeading"
            android:layout_marginStart="50dp"
            android:text="Content" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/cardview_light_background"
            android:text="Delete"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</android.support.v7.widget.CardView>