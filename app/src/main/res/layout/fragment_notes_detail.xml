<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usama.noteitproject.Fragments.NotesDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvDescHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="Heading"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvDescBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDescHead"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="18dp"
        android:text="Body"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvDescId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDescBody"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/tvDescHead"
        android:hint="ID"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:text="Edit"
        android:textAlignment="center"
        android:textColor="#ffff" />

</RelativeLayout>
